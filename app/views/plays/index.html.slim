- model_class = Play
.page-header
  h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
table.table.table-striped
  thead
    tr
      th= model_class.human_attribute_name(:id)
      th= model_class.human_attribute_name(:faction_id)
      th= model_class.human_attribute_name(:nation_id)
      th=t '.actions', :default => t("helpers.actions")
  tbody
    - @plays.each do |play|
      tr
        td= link_to play.id, play_path(play)
        td= play.faction&.name
        td= play.nation&.name
        td
          = link_to "play", new_play_turn_path(play), :class => 'btn btn-default btn-xs'
          '
          = link_to t('.show', :default => t("helpers.links.show")), play_path(play), :class => 'btn btn-default btn-xs'
          '
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_play_path(play), :class => 'btn btn-default btn-xs'
          '
          = link_to t('.destroy', :default => t("helpers.links.destroy")), play_path(play), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_play_path, :class => 'btn btn-primary'
